{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debug (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.out",  // Set the correct path to your compiled C program
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}
